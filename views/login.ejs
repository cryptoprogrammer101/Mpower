<%- include("partials/header") -%>

    <main class="colored-section">

        <h1>Log In</h1>

        <br><br>

        <form action="home">

            <div class="form-group">

                <label for="email">Email address:</label>
                <input type="email" class="form-control textbox" id="email" aria-describedby="emailHelp"
                    placeholder="Enter email" minlength="7" maxlength="40" required autofocus>

            </div>

            <br>

            <div class="form-group">

                <label for="pass">Password:</label>
                <input type="password" class="form-control textbox" id="pass" placeholder="Enter password" minlength="7"
                    maxlength="20" required>

            </div>

            <br><br>

            <button type="submit" class="btn btn-dark btn-lg login-btn">Log In</button>
            <a class="btn btn-outline-light btn-lg" href="signup">Sign Up</a>

        </form>

        <br><br>

    </main>

    <%- include("partials/footer") -%>