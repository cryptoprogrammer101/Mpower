<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Goal Setting</title>

  <%- include("partials/navbar-2") -%>

    <main class="goal-section">

      <h1 class="big-heading">Goals</h1>

      <div class="box">

        <% goalsList.forEach(goal=> { %>

          <form>

            <div class="goal-cell">

              <input class="checkbox" type="checkbox">

              <p class="goal">

                <%= goal.title %>

              </p>

            </div>

          </form>

          <% }) %>

            <form class="goal-cell" action="/goals" method="post">

              <input class="goal-input" type="text" placeholder="New Goal" name="goalTitle" required autofocus>

              <button class="add-btn" type="submit">+</button>

            </form>

      </div>

      <br>

      <% if (goalEntered) { %>

        <div class="alert alert-success alert-dismissible">

          <p>Entered goal!</p>

          <button type="button" class="close" data-dismiss="alert" aria-label="Close">

            <span aria-hidden="true">&times;</span>

          </button>

        </div>

        <br>

        <% } %>

    </main>

    <br><br><br><br><br>

    <%- include('partials/footer') -%>