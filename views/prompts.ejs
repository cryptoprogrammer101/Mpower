<%- include("partials/header-2") -%>

    <main class="container-fluid">

        <form action="prompts" method="post">

            <div class="form-group">

                <h2 class="future-sec-heading">
                    <%= promptTitle %>
                </h2>

                <br><br>

                <input type="hidden" name="promptTitle" value="<%= promptTitle %>">

                <input type="text" class="form-control textbox" placeholder="Enter prompt" name="prompt" minlength="5"
                    required autofocus>

            </div>

            <br>

            <% if (promptEntered) { %>

                <div class="alert alert-success alert-dismissible fade show">

                    <p>Saved prompt! View it <a href="prompts#<%= promptID %>" class="alert-link">here</a></p>

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">

                        <span aria-hidden="true">&times;</span>

                    </button>

                </div>

                <br>

                <% } %>

                    <button type="submit" class="btn btn-dark btn-lg">Save prompt</button>

        </form>

        <br><br>

        <h2 class="future-sec-heading">Saved prompts:</h2>

        <% if (prompts.length < 1) { %>

            <br><br>

            <h4>No saved prompts. Click the button above to enter new prompt.</h4>

            <br>

            <% } else { %>

                <br><br>

                <ul class="prompts-ul">
                    <% prompts.forEach(prompt=> { %>

                        <li class="prompt-title" id="<%= prompt._id %>">
                            <h4>
                                <%= prompt.title %>

                                    <br><br>

                                    <ul>
                                        <li>
                                            <%= prompt.content %>
                                        </li>
                                    </ul>
                            </h4>
                        </li>

                        <br><br>

                        <% }) %>

                </ul>

                <% } %>

    </main>

    <%- include("partials/footer") -%>